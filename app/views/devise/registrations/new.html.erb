<div class="container">
  <div class="row">
    <div id="form-registration-new" class="col-xs-12 col-sm-offset-4 col-sm-4">
      <h2 class="text-center">S'inscrire</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, label: "Email",required: true, autofocus: true %>
          <%= f.input :password, label: "Mot de passe", required: true %>
          <%= f.input :password_confirmation, label: "Confirmer le mot de passe", required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "S'inscrire", class: "btn btn-block btn-success"  %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

