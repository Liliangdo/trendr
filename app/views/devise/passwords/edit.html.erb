<div class="container">
  <div class="row">
    <div id="form-password" class="col-xs-12 col-sm-offset-4 col-sm-4">
      <h2 class="text-center">Changer son mot de passe</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>

        <div class="form-inputs">
          <%= f.input :password, label: "Nouveau mot de passe", required: true, autofocus: true %>
          <%= f.input :password_confirmation, label: "Confirmation", required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Changer mon mot de passe", class: "btn btn-block btn-success" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

