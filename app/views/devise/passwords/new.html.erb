<div class="container">
  <div class="row">
    <div id="form-password" class="col-xs-12 col-sm-offset-4 col-sm-4">

      <h2 class="text-center">Mot de passe oubliÃ© ?</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, label: "Email", required: true, autofocus: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Le recevoir par mail", class: "btn btn-block btn-success"  %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>

